pipeline {
    agent any
    
    stages {
        stage('git clone') {
             steps{
                 git credentialsId: 'Github', url: 'https://github.com/skbaji1991/hello-world.git'
            }
        }

        stage('maven build') {
              steps {
                sh 'mvn clean install'
                }
        }

        stage('docker image build') {
              steps {
                sh 'docker build  -t  abdulkareem2/kareem2:2.0.1 .'
                }
        }

        stage('docker push') {
              steps {
                withCredentials([string(credentialsId: 'docker', variable: 'dockerpasswd')])
                sh "docker login -u skabdulkareem -p $(dockerpasswd)"
                sh 'docker push  abdulkareem2/kareem2:2.0.1'
                }
        }
    }
        
}



