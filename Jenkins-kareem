pipeline {
    agent any
    
    stages {
        stage('git clone') {
             steps{
                 git credentialsId: 'Github', url: 'https://github.com/skbaji1991/hello-world.git'
            }
        }

        stage('maven build') {
              steps {
                sh 'mvn clean install'
            }
        }

        stage('docker image build') {
              steps {
                sh 'docker build  -t  abdulkareem/kareem11:2.0.1 .'
            }
        }

        stage('docker push') {
              steps {
                withCredentials([string(credentialsId: 'docker', variable: 'pdpwd')]) {
                sh 'docker login -u skabdulkareem -p $(pdpwd)'
                sh 'deploy.sh'
                }
                
                sh 'docker push  abdulkareem/kareem11:2.0.1'
            
            }
        }
    }
        
}



